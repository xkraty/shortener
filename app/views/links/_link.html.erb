<% short_link = short_url(link.slug) %>
<div class="bg-white/15 backdrop-blur-lg border border-white/20 rounded-lg p-4 space-y-2 shadow-lg transition duration-300 hover:bg-white/20">
  <div class="flex items-center justify-between gap-2">
    <%= link_to short_link,
        class: "text-white hover:text-blue-200 transition flex items-center gap-2",
        target: "_blank" do %>
      <%= short_link %>
      <svg class="w-4 h-4"><%= render "icons/external_link" %></svg>
    <% end %>
    <button 
      data-controller="clipboard"
      data-clipboard-text="<%= short_link %>"
      data-action="clipboard#copy"
      class="text-white/80 hover:text-white transition"
    >
      <svg class="w-4 h-4" data-clipboard-target="icon"><%= render "icons/copy" %></svg>
      <span class="sr-only" data-clipboard-target="text">Copy</span>
    </button>
  </div>
  
  <div class="text-white/60 text-sm truncate" title="<%= link.original_url %>">
    <%= link.original_url %>
  </div>
  
  <div class="flex items-center gap-4 text-sm text-white/60">
    <span class="flex items-center gap-1">
      <svg class="w-4 h-4 opacity-50">
        <%= render "icons/click" %>
      </svg>
      <%= pluralize(link.clicks, 'click') %>
    </span>
    <span class="flex items-center gap-1">
      <svg class="w-4 h-4 opacity-50">
        <%= render "icons/clock" %>
      </svg>
      <%= time_ago_in_words(link.created_at) %> ago
    </span>
  </div>
</div>