<%= form_with(model: link, class: "space-y-4") do |f| %>
  <%= f.url_field :original_url, 
      class: "w-full px-6 py-4 bg-white/10 backdrop-blur-sm border border-white/20 rounded-xl text-white placeholder-white/70 focus:ring-2 focus:ring-white/50 focus:border-transparent outline-none transition shadow-lg",
      placeholder: "Paste your long URL here..." %>
  
  <%= f.submit "Shorten URL", 
      class: "w-full bg-white/20 backdrop-blur-sm hover:bg-white/30 text-white font-medium py-4 px-6 rounded-xl transition duration-300 ease-in-out shadow-lg hover:shadow-xl" %>
<% end %>