SECRETS=$(kamal secrets fetch --adapter 1password --account my.1password.com --from Kamal/Shortener KAMAL_REGISTRY_USERNAME KAMAL_REGISTRY_PASSWORD RAILS_MASTER_KEY POSTGRES_PORT POSTGRES_USER POSTGRES_PASSWORD POSTGRES_HOST)
KAMAL_REGISTRY_USERNAME=$(kamal secrets extract KAMAL_REGISTRY_USERNAME $SECRETS)
KAMAL_REGISTRY_PASSWORD=$(kamal secrets extract KAMAL_REGISTRY_PASSWORD $SECRETS)
POSTGRES_PORT=$(kamal secrets extract POSTGRES_PORT $SECRETS)
POSTGRES_USER=$(kamal secrets extract POSTGRES_USER $SECRETS)
POSTGRES_PASSWORD=$(kamal secrets extract POSTGRES_PASSWORD $SECRETS)
POSTGRES_HOST=$(kamal secrets extract POSTGRES_HOST $SECRETS)
RAILS_MASTER_KEY=$(kamal secrets extract RAILS_MASTER_KEY $SECRETS)
